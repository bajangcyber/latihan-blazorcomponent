@page "/"

<PageTitle>Index</PageTitle>

<h1>Hello, world!</h1>

Welcome to your new app.


<br />
<br />
<RenderComponent Items="Customers">
    <Header>
    <h1>Custemer</h1>
    </Header>
    <Row Context="customer">
        <div>@customer.CompanyName</div>
        <div class="m-3">@customer.ContactName</div>
        <div class="m-3">@customer.PhoneNumber</div>
    </Row>

</RenderComponent>

<SurveyPrompt Title="How is Blazor working for you?" />

@code{
    private List<Customer> Customers;

    protected override void OnInitialized()
    {
        base.OnInitialized();

        Customers = new List<Customer>();
        Customers.AddRange(new Customer[]
        {
            new Customer{ CompanyName = "ABC Company", ContactName = "Azam", PhoneNumber = "12330932039203"},
            new Customer{ CompanyName = "DEF Company", ContactName = "Fahad", PhoneNumber = "5435435435899"},
            new Customer{ CompanyName = "GHI Company", ContactName = "Kamila", PhoneNumber = "0090909099090"}
        });
    }
    class Customer
    {
        public string CompanyName { get; set; }    
        public string ContactName { get; set; }
        public string PhoneNumber { get; set; }
    }



    protected override void OnAfterRender(bool firstRender)
    {
        if (firstRender)
        {
            // Logika yang hanya dijalankan setelah komponen pertama kali di-render
            Console.WriteLine("The component has been rendered for the first time.");
        }

        // Logika yang dijalankan setiap kali komponen di-render
        Console.WriteLine("The component has been rendered.");

        // Panggil metode atau lakukan tindakan lain setelah komponen di-render
        DoSomethingAfterRender();
    }

    private void DoSomethingAfterRender()
    {
        // Lakukan tindakan tertentu setelah komponen di-render
    }
}
